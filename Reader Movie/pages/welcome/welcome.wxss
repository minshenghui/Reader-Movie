/* pages/welcome/welcome.wxss */
page {
    background-color: #b3b4bd
}
.container {
    display: flex;
    flex-direction: column;
    align-items: center
}
.user-avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 160rpx;
}
.user-name {
    margin-top: 100rpx;
    font-size: 38rpx;
    font-weight: bold
}
.moto {
    font-size: 26rpx;
    font-weight: bold;
    line-height: 100rpx;
    color: #405f80
}
.moto-container {
    margin-top: 100rpx;
    border: 4rpx solid #ff7f00;
    width: 240rpx;
    height: 100rpx;
    border-radius: 10rpx;
    text-align: center 
}
